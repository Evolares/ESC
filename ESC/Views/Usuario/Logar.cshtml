@model ESC.Models.Usuario

@{
    ViewBag.Title = "Logar";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<form method="POST" autocomplete="off">
    <div class="d-flex align-items-center justify-content-center ht-100v">
        <img src="~/tema/img/FundoTelaLogin.png" class="wd-100p ht-100p object-fit-cover" alt="">
        <div class="overlay-body bg-black-6 d-flex align-items-center justify-content-center">
            <div class="login-wrapper wd-300 wd-xs-350 pd-25 pd-xs-40 rounded bd bd-white-2 bg-black-7">
                <div class="signin-logo tx-center tx-28 tx-bold tx-white"><span class="tx-normal">[</span> ESC <span class="tx-info">ABRESC</span> <span class="tx-normal">]</span></div>
                <div class="tx-white-5 tx-center mg-b-60">Gestão de Empresa Simples de Crédito</div>

                <div class="form-group">
                    <input type="text" class="form-control fc-outline-dark" name="nomeusuario" autofocus placeholder="Usuário">
                </div><!-- form-group -->

                <div class="form-group">
                    <input type="password" class="form-control fc-outline-dark" name="senha" placeholder="Informe a Senha" autocomplete="off">
                    <a href="" class="tx-info tx-12 d-block mg-t-10">Esqueceu a Senha?</a>
                </div><!-- form-group -->

                <span>

                    <input type="submit" value="Acessar" class="btn btn-info btn-block tx-white" />
                    @*<a class="btn btn-info btn-block tx-white" type="Submit" href="~/Usuario/Logar">Acessar</a>*@
                </span>

                <div class="mg-t-60 tx-center">Ainda não é Cadastrado? <a href="" class="tx-info">Acesse aqui</a></div>

            </div><!-- login-wrapper -->
        </div><!-- overlay-body -->
    </div><!-- d-flex -->
</form>